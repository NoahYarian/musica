<!doctype html>
<html>
  <%- include('head', {page: 'Add an Album'}) %>
  <body>
    <%- include('header') %>
    <h1>ADD AN ALBUM</h1>
    <form class='pure-form-aligned' action='/album/add' method='POST'>
      <fieldset>
        <div class="pure-control-group">
          <label for="artist">Artist</label>
          <input class='artistSearch' name="artist" type="text" placeholder="Artist" value='<%= artist %>'>
        </div>
        <div class="pure-control-group">
          <label for="title">Title</label>
          <input name="title" type="text" placeholder="Title">
        </div>
        <div class="pure-control-group">
          <label for="year">Year</label>
          <input name="year" type="text" placeholder="Year">
        </div>
        <div class="pure-control-group">
          <label for="art">Album Art</label>
          <input name="art" type="text" placeholder="Album Art URL">
        </div>
        <div class="pure-control-group">
          <label for="wiki">Wiki</label>
          <input name="wiki" type="text" placeholder="Wiki URL">
        </div>
        <div class="pure-controls">
          <input type="submit" class="pure-button pure-button-primary">
        </div>
      </fieldset>
    </form>
    <div class='results'></div>
    <%- include('javascripts') %>
    <script src='/js/album.js'></script>
  </body>
</html>
