<!doctype html>
<html>
  <%- include('head', {page: 'Add an Album'}) %>
  <body>
    <div>
      <a href='/artist'>Add an artist</a>
      <a href='/album'>Add an album</a>
      <a href='/'>Index</a>
    </div>
    <h1>ADD AN ALBUM</h1>
    <form action='/album/add' method='post'>
      Group: <input name='group' placeholder='Start typing to populate...'>
      Album Name: <input name='title' placeholder='Another Brick In the Wall'>
      <input type='submit'>
    </form>
    <div class='artistsResultsList'>
      <% artistResults.forEach(function(artist) { %>
        <div><a href='#'><%= artist.name %></a></div>
      <% }); %>
    </div>
    <%- include('javascripts') %>
  </body>
</html>
